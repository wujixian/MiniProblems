<!--pages/wxss/wxss.wxml-->
<text>pages/wxss/wxss.wxml</text>
<!-- 1. 给组件写样式有三种写法 -->
<!-- 1.1 行内（内联）样式 (key value形式)-->
<view style="color: red; background: blue; font-size: 32px" >hahaha</view>

<!-- 1.2 页内样式 绑定class or id 都是可以的 写在页内wxss里-->
<view class="box" >hahaha</view>
<text selectable>eeeeee</text>

<!-- 1.3 全局样式  绑定class or id 都是可以的 写在全局app的wxss里 -->
<view class="" >hahaha</view>

<!-- 2. 三种样式作用于同一个组件时  行内>页内>全局  (app 和wxss都有content样式)-->
<view style="background: red" class="content">乐乐乐乐</view>

<!-- 3. wxss中的单位： rpx -->
<!-- 屏幕适配问题（手机类型切换，控件等比大小缩放） -->
<!-- rpm:屏幕大小适配， em rem:字体大小适配，vw vh视窗高宽适配 -->
<view class="box1"></view>
<view class="box2"></view>
<view class="content1">哈哈哈哈</view>
<view class="content2">呵呵呵喝</view>

<!-- 4. 使用官方的样式库开发一个搜索框 -->
<view class="page__bd">
		<view class="weui-search-bar {{inputShowed ? 'weui-search-bar_focusing' : ''}}" id="searchBar">
			<form class="weui-search-bar__form">
				<view class="weui-search-bar__box">
					<i class="weui-icon-search"></i>
                    <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
                    <span class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput"></span>
				</view>
				<label class="weui-search-bar__label" bindtap="showInput">
					<i class="weui-icon-search"></i>
                    <span class="weui-search-bar__text">搜索</span>
				</label>
			</form>
            <view class="weui-search-bar__cancel-btn" bindtap="hideInput">取消</view>
    </view>
</view>